<h1>Reviews</h1>

<table>
  <thead>
    <tr>
        <th>Park |</th>  
        <th>Rating|</th>
        <th>Title | </th>
        <th>Review Comments</th>
        <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.park.name %></td>
        <td><%= review.rating %></td>
        <td><%= review.title %></td>
        <td><%= review.content %></td>
        <td><%= button_to 'Show', review %></td>
        <td><%= button_to 'Edit', edit_review_path(review) %></td>
        <td><%= button_to 'Delete', review_path(review), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Write a new review', new_review_path %>
